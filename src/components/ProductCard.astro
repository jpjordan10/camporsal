---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  product: CollectionEntry<"product">;
  customClass?: string;
}

const { product, customClass } = Astro.props;
---

<article
  id={`${product.data.category.slug}-${product.slug}`}
  product-item
  class={`group flex w-full flex-col justify-between gap-4 overflow-hidden rounded-lg border border-gray-100 bg-white shadow-md ${customClass && customClass}`}
>
  <a
    class="mx-3 mt-3 flex h-60 overflow-hidden rounded-xl"
    href={`/productos/${product.slug}`}
  >
    <Image
      class="object-contain transition duration-300 ease-in-out group-hover:scale-110"
      src={product.data.image}
      alt={product.data.imageAlt}
    />
    {
      false && (
        <span class="absolute top-0 left-0 m-2 rounded-full bg-black px-2 text-center text-sm font-medium text-white">
          39% OFF
        </span>
      )
    }
  </a>
  <div class="flex flex-col gap-4 px-5 pb-5">
    <a href={`/productos/${product.slug}`}>
      <h3 class="text-xl tracking-tight transition duration-300">
        {product.data.name}
        <span
          class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-primary"
        ></span>
      </h3>
    </a>
    <div class="flex items-center justify-between">
      <p>En stock</p>
      {
        false && (
          <p>
            <span class="text-3xl font-bold text-slate-900">$449</span>
            <span class="text-sm text-slate-900 line-through">$699</span>
          </p>
        )
      }
