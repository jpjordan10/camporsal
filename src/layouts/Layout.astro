---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.cdnfonts.com/css/coda-caption" rel="stylesheet" />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="grid grid-rows-[auto_minmax(0,_1fr)] h-screen">
    <Header />
    <div class="flex flex-col justify-between w-full overflow-auto">
      <main class="flex flex-col items-center flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Coda Caption", sans-serif;
  }
</style>
